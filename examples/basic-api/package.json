{
  "name": "basic-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "clean": "rimraf dist",
    "dev": "nodemon",
    "build": "npm run clean && swc src -d dist && npm run types",
    "types": "tsc --noEmit",
    "lint": "eslint ./src"
  },
  "dependencies": {
    "guarapi": "^1.1.1"
  },
  "devDependencies": {
    "@guarapi/eslint-config-guarapi": "^0.1.2",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.80",
    "@swc/register": "^0.1.10",
    "@types/node": "^20.5.6",
    "eslint": "^8.48.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2"
  },
  "prettier": "@guarapi/eslint-config-guarapi/prettierrc.js",
  "nodemonConfig": {
    "ext": "ts,js",
    "exec": "node -r @swc/register src/index"
  }
}
